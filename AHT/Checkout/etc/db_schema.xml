<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" >
        <column xsi:type="date" name="delivery_date" nullable="true" comment="Delivery date"/>
        <column xsi:type="varchar" name="delivery_comment" nullable="true" length="255" default="" comment="Delivery comment"/>
    </table>
    <table name="quote" >
        <column xsi:type="date" name="delivery_date" nullable="true" comment="Delivery date"/>
        <column xsi:type="varchar" name="delivery_comment" nullable="true" length="255" default="" comment="Delivery comment"/>
    </table>
</schema>